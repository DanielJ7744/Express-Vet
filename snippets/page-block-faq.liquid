<div class="page-width">
  <button
    type="button"
    class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height text-left"
    aria-controls="FAQ-content-{{ block.id }}"
  >
    {% include 'collapsible-icons-alt', no_circle: true %}
    {{ block.settings.title }}
  </button>
  <div id="FAQ-content-{{ block.id }}" class="collapsible-content collapsible-content--all collapsible-content--faq">
    <div class="collapsible-content__inner collapsible-content__inner--faq rte">
      {% if block.settings.page_content != blank %}
        {{ block.settings.page_content.content }}
      {% else %}
        {{ block.settings.text }}
      {% endif %}
    </div>
  </div>
</div>
