{%- assign show = true -%}
{%- if section.settings.only_homepage -%}
  {%- if template == 'index' -%}
	{%- assign show = true -%}
  {%- else -%}
	{%- assign show = false -%}
  {%- endif -%}
{%- endif -%}
{%- if show -%}
<div class="shipping-info-container">
<div class="page-fixed-width page-width">
  <div class="p-relative">
    <div class="tab-container">
      <div class="page-width">
        <div class="tab-body">
          {% for block in section.blocks %}
          <div class="tab-free">
            <div class="tab-img">
              {% if block.settings.image != blank %}
              <img class="i-c lazyload" data-src="{{ block.settings.image | img_url }}" />
              {% endif %}
            </div>
            <div class="tab-txt">
              {% if block.settings.title != blank %}<div class="h3 blue">{{ block.settings.title }}</div>{% endif %}
              {% if block.settings.text != blank %}<div class="p">{{ block.settings.text }}</div>{% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
</div>
{%- endif -%}
{% schema %}
  {
    "name": "Header Shipping Part",
	"max_blocks": 3,
    "settings": [
	  {
        "type": "checkbox",
        "id": "only_homepage",
        "label": "Only hompage",
        "default": true
      }
	],
    "blocks": [
      {
        "type": "Column",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "html",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
